backend <%= @name -%> {
  .host  = "<%= @host -%>";
  .port  = "<%= @port -%>";
  .probe = {
    .url       = "<%= @probe_url -%>";
    .timeout   = <%= @probe_timeout -%> ms;
    .interval  = <%= @probe_interval -%>s;
    .window    = <%= @probe_window -%>;
    .threshold = <%= @probe_threshold -%>;
  }
}

